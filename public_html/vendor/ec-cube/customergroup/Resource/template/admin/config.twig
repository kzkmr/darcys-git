{% extends '@admin/default_frame.twig' %}

{% set menus = ['plugin_customer_group', 'setting'] %}

{% block title %}{{'基本設定'|trans}}{% endblock %}
{% block sub_title %}{{'会員グループ設定'|trans}}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}
    <form role="form" method="post">

        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>{{ '設定'|trans }}</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4"><span>{{ '会員グループ設定商品を商品一覧ページから非表示'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.optionGroupProductHidden) }}
                                    {{ form_errors(form.optionGroupProductHidden) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4"><span>{{ '会員グループ設定カテゴリを非表示'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.optionGroupCategoryHidden) }}
                                    {{ form_errors(form.optionGroupCategoryHidden) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">

                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">登録</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
