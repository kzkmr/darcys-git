<script>
    $(function() {
		$('#add_seo_list_detail_area').appendTo($('form.mode-edit'));
    });
</script>

<div id="add_seo_list_detail_area" style="display:none;">
	{% if Categories|length > 0 %}
		{% for Category in Categories %}
			{{ form_widget(forms[Category.id].itoben_seo_title, {'attr': {'data-origin-value': forms[Category.id].itoben_seo_title.vars.value}}) }}
			{{ form_widget(forms[Category.id].itoben_seo_author, {'attr': {'data-origin-value': forms[Category.id].itoben_seo_author.vars.value}}) }}
			{{ form_widget(forms[Category.id].itoben_seo_description, {'attr': {'data-origin-value': forms[Category.id].itoben_seo_description.vars.value}}) }}
			{{ form_widget(forms[Category.id].itoben_seo_keyword, {'attr': {'data-origin-value': forms[Category.id].itoben_seo_keyword.vars.value}}) }}
			{{ form_widget(forms[Category.id].itoben_seo_meta_robots, {'attr': {'data-origin-value': forms[Category.id].itoben_seo_meta_robots.vars.value}}) }}
			{{ form_widget(forms[Category.id].itoben_seo_meta_tags, {'attr': {'data-origin-value': forms[Category.id].itoben_seo_meta_tags.vars.value, rows : "8"}}) }}
		{% endfor %}
	{% endif %}	
</div>
